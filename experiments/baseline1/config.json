{
    "batch_size": 16,
    "learning_rate": 1e-5,
    "num_epochs": 30,
    "graph": {
        "mesh_size": 3,
        "grid2mesh_edge_creation": "radius",
        "mesh2grid_edge_creation": "contained",
        "grid2mesh_radius_query": 0.5,
        "mesh_levels": [
            -1
        ]
    },
    "pipeline": {
        "encoder": {
            "mlp": {
                "output_dim": 32,
                "use_layer_norm": "true",
                "layer_norm_mode": "node"
            },
            "gcn": {
                "layer_type": "simple_conv"
            }
        },
        "processor": {
            "gcn": {
                "layer_type": "conv_gcn",
                "hidden_dims": [
                    32,
                    32
                ],
                "output_dim": 32,
                "use_layer_norm": "true",
                "layer_norm_mode": "node"
            }
        },
        "decoder": {
            "mlp": {
                "output_dim": 2,
                "use_layer_norm": "true",
                "layer_norm_mode": "node"
            },
            "gcn": {
                "layer_type": "simple_conv"
            }
        }
    },
    "data": {
        "data_directory": "data/datasets/Data_Adit",
        "feats_flattened": true,
        "num_latitudes": 32,
        "num_longitudes": 64,
        "num_features": 3,
        "obs_window": 4,
        "pred_window": 1,

        "num_features_used": 2,
        "obs_window_used": 4,
        "pred_window_used": 1,
        "want_feats_flattened": true
    }, 
    "product_graph": {
        "use_product_graph": true,
        "kronecker": false,
        "cartesian": false,
        "strong": true
    }
}